{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@panguard-ai/core": ["./packages/core/src"],
      "@panguard-ai/core/*": ["./packages/core/src/*"],
      "@panguard-ai/panguard-scan": ["./packages/panguard-scan/src"],
      "@panguard-ai/panguard-guard": ["./packages/panguard-guard/src"],
      "@panguard-ai/panguard-chat": ["./packages/panguard-chat/src"],
      "@panguard-ai/panguard-trap": ["./packages/panguard-trap/src"],
      "@panguard-ai/panguard-report": ["./packages/panguard-report/src"],
      "@panguard-ai/panguard-web": ["./packages/panguard-web/src"],
      "@panguard-ai/panguard": ["./packages/panguard/src"],
      "@panguard-ai/panguard-auth": ["./packages/panguard-auth/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/panguard-scan" },
    { "path": "./packages/panguard-guard" },
    { "path": "./packages/panguard-chat" },
    { "path": "./packages/panguard-trap" },
    { "path": "./packages/panguard-report" },
    { "path": "./packages/panguard-web" },
    { "path": "./packages/panguard" },
    { "path": "./packages/panguard-auth" },
    { "path": "./security-hardening" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist"]
}

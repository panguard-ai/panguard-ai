# Panguard AI - Environment Variables
# Copy this file to .env and fill in your values

# ── Server ─────────────────────────────────────────────────────────
PANGUARD_PORT=3000
PANGUARD_BASE_URL=http://localhost:3000

# ── Auth Database ──────────────────────────────────────────────────
# Path to SQLite database file (default: ./panguard-auth.db)
PANGUARD_AUTH_DB=./panguard-auth.db

# ── SMTP (for verification emails) ────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@email.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@panguard.ai

# ── Google OAuth (optional - for "Sign in with Google") ──────────
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ── Google Sheets (optional - auto-sync waitlist to Sheets) ──────
# Create a service account: https://console.cloud.google.com/iam-admin/serviceaccounts
# Share the sheet with the service account email
GOOGLE_SHEETS_ID=your-spreadsheet-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=panguard@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ── Wazuh Integration (optional) ──────────────────────────────────
WAZUH_API_URL=https://wazuh.example.com:55000
WAZUH_API_USER=admin
WAZUH_API_PASS=
